<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tamanegisoul.screentime.DebugActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start ScreenLockActivity"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick_startScreenLockActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start SettingsActivity"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick_startSettingsActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start VerifyPasscodeActivity"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick_startVerifyPasscodeActivity"/>

</LinearLayout>
